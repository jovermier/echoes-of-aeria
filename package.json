{
  "name": "echoes-of-aeria",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "description": "A top-down action-adventure game inspired by 16-bit classics",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui --ui-host=0.0.0.0 --ui-port=9323",
    "test:e2e:report": "playwright show-report --host=0.0.0.0 --port=9325",
    "test:e2e:debug": "playwright test --debug",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "framer-motion": "12.23.12",
    "howler": "2.2.4",
    "phaser": "3.90.0",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "zustand": "5.0.8"
  },
  "devDependencies": {
    "@eslint/js": "9.34.0",
    "@playwright/test": "1.55.0",
    "@testing-library/jest-dom": "6.8.0",
    "@testing-library/react": "16.3.0",
    "@testing-library/user-event": "14.6.1",
    "@types/howler": "2.2.12",
    "@types/react": "19.1.11",
    "@types/react-dom": "19.1.7",
    "@typescript-eslint/eslint-plugin": "8.40.0",
    "@typescript-eslint/parser": "8.40.0",
    "@vitejs/plugin-react": "5.0.1",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/ui": "3.2.4",
    "eslint": "9.33.0",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "5.2.0",
    "happy-dom": "18.0.1",
    "typescript": "5.9.2",
    "vite": "7.1.3",
    "vitest": "3.2.4"
  },
  "keywords": [
    "game",
    "zelda-like",
    "action-adventure",
    "pixel-art",
    "typescript",
    "phaser",
    "react"
  ],
  "author": "Game Development Team",
  "license": "MIT"
}
